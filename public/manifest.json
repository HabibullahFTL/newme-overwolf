{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "CptWesley's Minimap",
    "author": "Wesley Baartman",
    "version": "1.3.2",
    "minimum-overwolf-version": "0.92.300.0",
    "description": "Open-source minimap for Amazon's New World.",
    "dock_button_title": "New me map",
    "icon": "icons/app_256.png",
    "icon_gray": "icons/app_256_gray.png",
    "launcher_icon": "icons/app.ico",
    "window_icon": "icons/app_256.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo"
  ],
  "data": {
    "start_window": "background",
    "windows": {
      "background": {
        "file": "background.html",
        "is_background_page": true
      },
      "desktop": {
        "file": "desktop.html",
        "desktop_only": true,
        "native_window": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1212,
          "height": 699
        },
        "min_size": {
          "width": 1212,
          "height": 699
        },
        "max_size": {
          "width": 1212,
          "height": 699
        }
      },
      "in_game": {
        "file": "in_game.html",
        "in_game_only": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1212,
          "height": 699
        },
        "min_size": {
          "width": 1212,
          "height": 699
        },
        "max_size": {
          "width": 1212,
          "height": 699
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [
        21816
      ]
    },
    "game_events": [
      21816
    ],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [
            21816
          ]
        },
        "start_minimized": false
      }
    ],
    "hotkeys": {
      "showhide": {
        "title": "Show/Hide In-Game Window",
        "action-type": "toggle",
        "default": "Ctrl+F"
      },
      "zoomIn": {
        "title": "Zoom in (in-game only)",
        "action-type": "custom",
        "default": "Ctrl+["
      },
      "zoomOut": {
        "title": "Zoom out (in-game only)",
        "action-type": "custom",
        "default": "Ctrl+]"
      }
    },
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://overwolf.github.io",
        "https://*.newworld-map.com",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://www.googleapis.com",
        "https://discord.gg/v5cfBTq",
        "https://twitter.com/",
        "https://www.facebook.com",
        "https://www.reddit.com",
        "https://wowme.gg",
        "https://wowme.gg/oauth/callback_overwolf"
      ]
    },
    "force_browser": "user",
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}